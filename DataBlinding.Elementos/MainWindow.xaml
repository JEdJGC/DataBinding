<Window x:Class="DataBlinding.Elementos.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataBlinding.Elementos"
        mc:Ignorable="d"
        Title="Data Binding a un elemento" Height="250" Width="300">
    <StackPanel Margin="8">
        <Label Content="Escriba algo:"
               Margin="8,0"/>
        <TextBox Margin="8,4"
                 x:Name="textoTextBox"
                 TextChanged="textoTextBox_TextChanged"/>
        <StackPanel Margin="8">
            <TextBlock Margin="8"
                       Text="Texto escrito:"/>
            <TextBlock FontStyle="Italic"
                       HorizontalAlignment="Center"
                       Margin="8"
                       x:Name="textoTextBlock"/>

        </StackPanel>
    </StackPanel>
</Window>
